<% include _layouts/header %>

<section id="signin-section">
    <div class="container">
        <div class="row signin-row">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12" style="background-image: url('http://bespokesuitsnyc.com/me-43.jpg'); background-position: center right; background-repeat: no-repeat; background-size: cover;">

            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 signin-content">

                <div class="row back-row">
                  <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <a href="/users/account" class="back-link">
                      <button class="btn-footer btn-back"><i class="ion-ios-arrow-thin-left"></i></button>
                      <span class="back-text">Back to account</span>
                    </a>
                  </div>
                </div>

                <div class="row">
                  <h3 class="invoice-title col-sm-12">Invoice</h3>
                </div>

                <div class="row">
                  <p class="invoice-item col-sm-3">Reference:</p><span class="invoice-get col-sm-9" id="invoice-reference"><%= invoice.id %></span>
                </div>

                <% var year = invoice.date.getFullYear() %>
                <% var month = invoice.date.getMonth() + 1 %>
                <% var day = invoice.date.getDate() + 1 %>
                <div class="row" style="margin-bottom:1em;">
                  <p class="invoice-item col-sm-3">Date:</p><span class="invoice-get col-sm-9" id="invoice-date"><%= day %>/<%= month %>/<%= year %></span>
                </div>

                <% var i = 0 %>
                <% invoice.cart.forEach(function(c) {  %>
                  <% i++ %>
                  <div class="row">
                    <p class="invoice-item col-sm-3">Product <%= i %>:</p><span class="invoice-get col-sm-9" id="invoice-product2"><%= c.title %></span>
                  </div>
                <% }); %>
                
                
                <div class="row" style="margin-top:1em;">
                  <p class="invoice-item col-sm-3">Total:</p><span class="invoice-get col-sm-9" id="invoice-total">R499</span>
                </div>
                
            </div>

        </div>
    </div>
</section>

<script type="text/javascript">
  
  $('button.registerButton').click(function() {
    $('form.registerForm').submit();
  });
  $('button.loginButton').click(function() {
    $('form.loginForm').submit();
  });

</script>

<% include _layouts/footer %>
