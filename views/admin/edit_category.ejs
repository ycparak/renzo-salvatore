<%- include('../_layouts/adminheader') %>

<section>
    <div class="container">
        <h1 class="display-4" style="padding-bottom: .5em;">Edit Category</h1>
        <a href="/admin/categories" class="btn btn-secondary">Back to all categories</a>
        <br><br>

        <form method="post" action="/admin/categories/edit-category/<%= id %>">

            <div class="form-group">
                <label for="">Title</label>
                <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
            </div>

            <button class="btn btn-primary" style="cursor:pointer;">Save Changes</button>
        </form>
    </div>
</section>

<%- include('../_layouts/adminfooter') %>