<% include _layouts/header %>

<section id="signin-section">
    <div class="container">
        <div class="row signin-row">
            <div class="col-xl-6 col-lg-4 col-md-12 col-sm-12 col-xs-12 carousel">

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                  <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                  </ol>
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="d-block w-100 product-image" id="product-image-1" src="/product_images/<%= p.id %>/<%= p.image1 %>" alt="First slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100 product-image" id="product-image-2" src="/product_images/<%= p.id %>/<%= p.image2 %>" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100 product-image" id="product-image-3" src="/product_images/<%= p.id %>/<%= p.image3 %>" alt="Third slide">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>

            </div>

            <div class="col-xl-6 col-lg-8 col-md-12 col-sm-12 col-xs-12 signin-content">
                <div class="row back-row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <a href="/products" class="back-link">
                            <button class="btn-footer btn-back"><i class="ion-ios-arrow-thin-left"></i></button>
                            <span class="back-text">Back to catalogue</span>
                        </a>
                    </div>
                </div>
                <h2 class="product-name" id="product-name"><%= p.title %></h2>
                <p class="short-description">
                    <em id="product-short-description">
                        <span id="product-price">R<%= parseFloat(p.price).toFixed(2) %></span> 
                        &mdash; 
                        <%= p.shortDesc %>
                        &mdash;
                        <span id="product-price"><%= p.colour %></span> 
                        <span id="product-price"><%= p.material %></span> 
                    </em>
                </p>
                <p class="long-description" id="product-long-description"><%= p.desc %></p>
                <form class="form-to-cart">
                    <div class="form-group last-form-group">
                        <% if (loggedIn) { %>
                            <a href="/cart/add/<%= p.slug %>"><button type="button" name="btnAdd" class="btn btn-primary btnAdd">Add to Cart</button></a>
                        <% } else { %>
                            <a href="/users/register"><button type="button" name="btnAdd" class="btn btn-primary btnAdd">Sign in to Add to Cart</button></a>
                        <% } %>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>

<% include _layouts/footer %>
